for (var i = 0; i < text.length; i++) {

if (text[i] === myName[0]) {
for (var j=i; j < i + myName.length; j++){
    hits.push(text[j]);
}
      }
    }

6. Log it!

/*jshint multistr:true */

var text = "Lorem ipsum dolor sit amet. My name is Blondie.";

var myName = "Blondie";

var hits = [];

for (var i = 0; i < text.length; i++) {

    if (text[i] === myName[0]) {
   for (var j=i; j < i + myName.length; j++){
    hits.push(text[j]);
}
      }
    }
    
if (hits.length = 0) {
    console.log("Your name was not found")
}

else {
    console.log(hits);
}


7. Victory!
/*jshint multistr:true */

var text = "Lorem ipsum dolor sit amet. My name is Blondie.";

var myName = "Blondie";

var hits = [];

for (var i = 0; i < text.length; i++) {

    if (text[i] === myName[0]) {
   for (var j=i; j < i + myName.length; j++){
    hits.push(text[j]);
}
      }
    }
    
if (hits.length = 0) {
    console.log("Your name was not found")
}

else {
    console.log(hits);
}
